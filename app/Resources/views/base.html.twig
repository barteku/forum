<!DOCTYPE html>
<html lang="{{- app.request.locale -}}">
    <head>
        <meta http-equiv="content-type" content="text/html;charset=utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>{%- block title -%}{%- endblock -%}</title>

        <link rel="stylesheet" href="/css/bootstrap-theme.min.css">
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/main.css">
        {%- block stylesheets -%}
        {%- endblock -%}
    </head>
    <body>

        {%- spaceless -%}

        <div id="page-wrap">

            {%- block navbar -%}
            <header>
                <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="{% if is_granted('IS_AUTHENTICATED_FULLY') %} col-md-8 {% else %} col-md-12 {% endif %} text-right" id="main-menu-col">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#top-nav">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>

                                </div>

                                <!-- Collect the nav links, forms, and other content for toggling -->
                                <div class="collapse navbar-collapse" id="top-nav">
                                    {{ knp_menu_render('FuturaForumBundle:Builder:mainMenu', {'currentClass' : 'active', 'template': 'FuturaForumBundle:Menu:knp_menu.html.twig', 'allow_safe_labels': true}) }}
                                    <!-- /.navbar-collapse -->
                                </div>
                            </div>

                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                <ul class="nav navbar-nav navbar-right user-menu" >
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="glyphicon glyphicon-user"></i> {{- app.user.fullname -}}</a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="{{ path('fos_user_security_logout') }}">Wyloguj</a></li>
                                        </ul>
                                    </li>
                                </ul>

                            {% endif %}
                        </div>
                    </div>
                </nav>
            </header>


            {%- block tool_bar -%}
            {%- endblock tool_bar -%}

            {%- endblock navbar -%}

            <div class="container clearfix main-content">
                {% block main_content %}
                {% block body_header %}{% endblock %}                    

                <div class="row">
                    <aside class="col-md-3 page-sidebar-left">
                        {%- block sidebar -%}
                        {%- endblock sidebar -%}
                    </aside>

                    <div class="col-md-offset-1 col-md-8 page-body-right">
                        <div id="top clearfix"></div>
                        {%- block body -%}
                        {%- endblock body -%}
                    </div>
                </div>
            {% endblock %}       
        </div>
        <div id="push"></div>
    </div>


    <footer id="footer" class="footer site-footer">

        <div class="navbar navbar-default clearfix">
            <p class="navbar-text pull-right content-right">
                Copyright <a target="_blank" class="navbar-link" href="http://www.futura.edu.pl/">Futura Edukacja</a>.
            </p>
        </div>
    </footer>

    <script src="//code.jquery.com/jquery.js"></script>
    <script src="/js/bootstrap/bootstrap.min.js"></script>
    {%- block javascripts -%}
    {%- endblock -%}

    <script type='text/javascript'>
        <!--
            $(document).ready(function () {
            // make visible js compat toolbars site wide
            $("[data-js-non-compat]").each(function (i, el) {
                $(el).addClass('collapse').addClass('hidden');
            });

            $("[data-js-compat]").each(function (i, el) {
                $(el).removeClass('collapse').removeClass('hidden');
            });

            $('[data-tip]').each(function () {
                $(this).tooltip({
                    html: true,
                    placement: $(this).data('tip')
                });
            });

            $('[data-toggle="dropdown"]').dropdown();
        });
        //-->
    </script>

    {%- endspaceless -%}
</body>
</html>
